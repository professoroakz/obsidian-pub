# Environment variables for obsidian-pub
# Copy this to .env and customize

# Repository settings
REPO_NAME=obsidian-pub
REPO_OWNER=professoroakz
REPO_URL=https://github.com/professoroakz/obsidian-pub.git

# Sync settings
SYNC_INTERVAL=3600
AUTO_COMMIT=true
AUTO_PUSH=true

# Backup settings
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_ON_SYNC=false

# Git configuration
GIT_USER_NAME="Your Name"
GIT_USER_EMAIL="your.email@example.com"
GIT_DEFAULT_BRANCH=main

# Python settings
PYTHON_VERSION=3.11
VIRTUAL_ENV_DIR=venv

# Docker settings
DOCKER_IMAGE_NAME=obsidian-pub
DOCKER_TAG=latest

# Publishing settings
PUBLISH_BRANCH=main
PUBLISH_DIR=./
AUTO_PUBLISH=false

# Obsidian settings
OBSIDIAN_VAULT_PATH=./
OBSIDIAN_CONFIG_DIR=.obsidian

# Development settings
DEV_MODE=false
DEBUG=false
VERBOSE=false

# API tokens (if needed - never commit these!)
# GITHUB_TOKEN=
# PYPI_TOKEN=
# NPM_TOKEN=
